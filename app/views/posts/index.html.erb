    <body>
        
        <table>
        <thead>
            <tr>
            <th>＜＜投稿一覧＞＞</th>
            <th colspan="2"></th>
            </tr>
        </thead>

        <tbody>
            <%if @posts.length==0  %>
                <div>まだなにも投稿されていません</div>
            <% else %>
            <% @posts.each do |post| %>
            <tr>
                <td><%= post.content %></td>
                <td><%= link_to '詳細', post %></td>
                <td><%= link_to '編集', edit_post_path(post) %></td>
                <td><%= link_to '削除', post, method: :delete, data: { confirm: 'ほんとにけす？' } %></td>
            </tr>
            <% end %>
            <% end %>    
        </tbody>

        </table>

        <br>

            <%= link_to '新規投稿', new_post_path %>
    </body>

</html>